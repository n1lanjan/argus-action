{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "node"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "src/**/*.spec.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
