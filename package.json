{
  "name": "argus",
  "version": "1.0.0",
  "description": "🔍 The All-Seeing Code Guardian - Advanced AI-powered GitHub Action with specialized review agents",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:sample-pr": "node scripts/test-sample-pr.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/argus.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "argus",
    "claude",
    "multi-agent",
    "static-analysis",
    "security",
    "performance",
    "architecture",
    "code-guardian"
  ],
  "author": "Your Organization",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.24.3",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.3",
    "openai": "^4.20.1",
    "p-limit": "^4.0.0",
    "p-retry": "^6.2.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
