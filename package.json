{
  "name": "argus",
  "version": "0.1.0",
  "type": "module",
  "description": "🔍 The All-Seeing Code Guardian - Advanced AI-powered GitHub Action with specialized review agents",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:sample-pr": "node scripts/test-sample-pr.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n1lanjan/argus-action.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "argus",
    "claude",
    "multi-agent",
    "static-analysis",
    "security",
    "performance",
    "architecture",
    "code-guardian"
  ],
  "author": "Nilanjan De",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.27.3",
    "@octokit/rest": "^21.0.2",
    "axios": "^1.7.7",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.1",
    "openai": "^4.67.3",
    "p-limit": "^6.1.0",
    "p-retry": "^6.2.1",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^9.17.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
